<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@android:color/transparent</item>
    </style>

    <style name="TitleTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
        <item name="android:textColor">@color/PrimaryBlack</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="OrderItemsTextView" parent="TitleTextView">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CategoryTitleTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
        <item name="android:textColor">@color/PrimaryBlack</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="ItemTitleTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
        <item name="android:textColor">@color/PrimaryBlack</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="ItemTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/PrimaryBlack</item>
    </style>

    <style name="PriceTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/iran_yekan_regular</item>
        <item name="android:textColor">@color/PrimaryBlack</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="OffPriceTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/iran_yekan_regular</item>
        <item name="android:textColor">@color/coolGreen</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="backTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
        <item name="android:textColor">@color/coolBlue</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="counterTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/coolBlue</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="CongratulationTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
        <item name="android:textColor">@color/PrimaryBlack</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="hintTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/mediumGray</item>
    </style>

    <style name="GreenButtonThemeOverlay">
        <item name="colorPrimary">@color/coolGreen</item>
        <item name="android:fontFamily">@font/iran_yekan_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CyanButtonThemeOverlay">
        <item name="colorPrimary">@color/coolCyan</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/iran_yekan_bold</item>

    </style>

    <style name="PurpleBlueButtonThemeOverlay">
        <item name="colorPrimary">@color/purpleBlue</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
    </style>

    <style name="til"
        parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">#27e905</item>
        <item name="android:textColorHint">#27e905</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
